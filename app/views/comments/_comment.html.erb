<% show_post ||= false %>

<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: :post, remote: true do %>
        <i class="icon-chevron-up"></i>
      <% end %>
      <br />
    <% end %>
      <span id="comment_<%= comment.id %>_vote"><%= comment.total_votes %> votes</span>
      <br />
    <% if logged_in? %>
      <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: :post, remote: true do %>
        <i class="icon-chevron-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class="well span8">
    <em>"<%= comment.body %>"</em>
    <% if show_post %>
      on <%= link_to comment.post.title, post_path(comment.post) %>
    <% end %>
    <br />
    <span class="quiet">by </span><%= comment.creator.username %><small> at <%= format_date(comment.created_at) %></small>
  </div>
</div>