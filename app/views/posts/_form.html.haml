= render "shared/error_message", content: @post

.well
  = form_for @post do |f|
    .control-group
      = f.label :title
      = f.text_field :title
    .control-group
      = f.label :url
      = f.text_field :url
    .control-group
      = f.label :description
      = f.text_area :description, rows: 5
    .control-group
      = collection_check_boxes(:post, :category_ids, Category.all, :id, :name) do |cb|
        - cb.label(class: "checkbox inline") { cb.check_box(class: "checkbox") + cb.text }
    = f.submit @post.new_record? ? 'Create post' : 'Update post', class: "btn btn-primary"
