<div class="row">
  <div class="span0 well text-center">
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: true), method: :post, remote: true do %>
        <i class="icon-chevron-up"></i>
      <% end %>
      <br />
    <% end %>
      <span id="post_<%= post.slug %>_vote"><%= post.total_votes %> votes</span>
      <br />
    <% if logged_in? %>
      <%= link_to vote_post_path(post, vote: false), method: :post, remote: true do %>
        <i class="icon-chevron-down"></i>
      <% end %>
    <% end %>
  </div>
  <div class="span8 well">
    <%= render post.categories %>
    <h4><%= link_to post.title, updated_url(post.url) %></h4>
    <p><%= post.description %></p>
    <p> 
      <span class="quiet">posted by </span><%= link_to post.creator.username, user_path(post.creator) %><small> at <%= format_date(post.created_at) %></small>
    </p>
    <small>
      <%= link_to "#{post.comments.size} comments", post_path(post) %>
    </small>
  </div>
</div>