<%= render "shared/content_title", title: "All Posts" %>

<% @posts.each do |post| %>
  <div class="row">
    <div class="span8 well">
      <%= render post.categories %>
      <h4><%= link_to post.title, updated_url(post.url) %></h4>
      <p><%= post.description %></p>
      <p> 
        <span class="quiet">posted by </span><%= post.creator.username %><small> at <%= format_date(post.created_at) %></small>
      </p>
      <small>
        <%= link_to "#{post.comments.size} comments", post_path(post) %>
      </small>
    </div>
  </div>
<% end %>
