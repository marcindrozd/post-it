<div class="well">
  <%= form_for(:session, url: login_path) do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <%= f.submit 'Log in', class: "btn btn-primary" %>
  <% end %>
</div>