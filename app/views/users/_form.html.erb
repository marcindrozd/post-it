<%= render 'shared/error_message', content: @user %>

<div class="well">
  <%= form_for @user do |f| %>
    <div class="control-group">
      <%= f.label :username %>
      <%= f.text_field :username %>
    </div>
    <div class="control-group">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>
    <div class="control-group">
      <%= f.label :time_zone %>
      <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.all.sort, default: 'Warsaw' %>
    </div>
    <%= f.submit @user.new_record? ? "Register" : "Update", class: "btn btn-primary" %>
  <% end %>
</div>
